<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_new_game_screen" tools:context=".NewGameScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/New_Game"
        android:id="@+id/newGame"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/leagueGame"
        android:layout_alignStart="@+id/leagueGame"
        android:layout_alignRight="@+id/leagueGame"
        android:layout_alignEnd="@+id/leagueGame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/league_view"
        android:id="@+id/leagueGame"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/newGame"
        android:layout_alignLeft="@+id/howToPlay"
        android:layout_alignStart="@+id/howToPlay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_to_play"
        android:id="@+id/howToPlay"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/leagueGame"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_match"
        android:id="@+id/gameMatch"
        android:layout_below="@+id/howToPlay"
        android:layout_alignLeft="@+id/howToPlay"
        android:layout_alignStart="@+id/howToPlay"
        android:layout_marginTop="60dp" />
</RelativeLayout>
